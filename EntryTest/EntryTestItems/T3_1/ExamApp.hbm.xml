<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NHibernateSample.Domain（实体类程序集的名称）"
                    namespace="EntryTest.EntryTestItems.T3_1">
  <class name="ExamApp" table="ExamApp" lazy="false">
    <id name="Code" column="Code" type="String">
      <generator class="assigned"></generator>
    </id>
    <property name="Name" column="Name" type="String"/>
    <property name="StartDate" column="StartDate" type="DateTime"/>
    
    <joined-subclass name="EnrollNeedApprovalExamApp" table="EnrollNeedApprovalExamApp">
      <key column="EnrollNeedApprovalExamApp_Code" />
      <property name="CertifiacateSystem" column="CertifiacateSystem" type="String"/>
      <property name="Approver" column="Approver" type="String"/>
    </joined-subclass>
    
  </class>
</hibernate-mapping>